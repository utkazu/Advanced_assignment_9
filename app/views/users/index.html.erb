<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/template', {user: @user, book: @book} %>
		</div>
		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: '50x50', fallback: "/images/no-image.jpg" %></td>
							<td><%= user.name %></td>
							<td>
								<a href="<%= following_user_path(user) %>">
									フォロー数：<%= user.following.count %>
								</a>
							</td>
							<td>
								<a href="<%= followers_user_path(user) %>">
									フォロワー数：<%= user.followers.count %>
								</a>
							</td>
							<td>
								<% if user != current_user %>
									<%= render 'users/follow_button', user: user%>
								<% end %>
							</td>
							<td><%= link_to "Show", user_path(user.id) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
