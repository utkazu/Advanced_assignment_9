<%# コメントの一覧を表示(id昇順) %>
<table>
  <% comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to comment.user do %>
          <%= attachment_image_tag comment.user, :profile_image, format: 'jpeg', size: '50x50' %><br>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td><%= comment.comment %></td>
      <% if comment.user == current_user%>
        <td>
          <%= link_to "/book_comments/#{comment.id}/destroy", method: :post, "data-confirm" => "本当に消しますか？", remote: true do %>
            <button type="button" class="btn btn-danger btn-block" aria-label="Left Align">Destroy</button>
          <% end %>
        </td>
      <% else %>
        <td></td>
      <% end %>
    </tr>
  <% end %>
</table>
